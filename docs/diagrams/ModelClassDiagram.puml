@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Interface ReadOnlyProjectDashboard <<Interface>>
Interface Model <<Interface>>
Interface ObservableList <<Interface>>
Class ProjectDashboard
Class ReadOnlProjectDashboard
Class Model
Class ModelManager
Class UserPrefs
Class ReadOnlyUserPrefs

Package Task {
Class Task
Class Name
Class TaskStatus
Class UniqueTaskList
}

Package Member {
Class Member
Class MemberId
Class MemberName
Class UniqueMemberList
}

Package Inventory {
Class Inventory
Class InvName
Class Price
Class UniqueInventoryList
}

Package Mapping {
Class Mapping
Class UniqueMappingList
}

Package Tag {
Class Tag
}
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

ProjectDashboard .up.|> ReadOnlyProjectDashboard

ModelManager .up.|> Model
Model .right.> ObservableList
ModelManager o--> "1" ProjectDashboard
ModelManager o-left-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

AddressBook *--> "1" UniqueTaskList
UniqueTaskList o--> "*" Task
Task *--> Name
Task *--> TaskStatus
Task *--> "*" Tag

Name -[hidden]right-> Phone
Phone -[hidden]right-> Address
Address -[hidden]right-> Email

AddressBook *--> "1" UniqueMemberList
UniqueMemberList o--> "*" Member
Member *--> MemberId
Member *--> MemberName
Member *--> "*" Tag

AddressBook *--> "1" UniqueInventoryList
UniqueInventoryList o--> "*" Inventory
Inventory *--> InvName
Inventory *--> Price

AddressBook *--> "1" UniqueMappingList
UniqueMappingList o--> "*" Mapping


ModelManager -->"1" Task : filtered list
ModelManager -->"1" Member : filtered list
ModelManager -->"1" Inventory : filtered list
ModelManager -->"1" Mapping : filtered list
@enduml
